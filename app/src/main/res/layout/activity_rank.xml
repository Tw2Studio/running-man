<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorSplash">

        <ImageView android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/ic_back"
            android:id="@+id/btn_back_rank"
            android:padding="16dp"/>

        <TextView android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:text="Bảng xếp hạng yêu thích"
            android:textStyle="bold"
            android:textColor="@color/colorNau"
            android:textSize="20dp"/>

        <ImageView android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/ic_help"
            android:id="@+id/btn_help"
            android:padding="16dp"/>

    </TableRow>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/recycle_rank">

    </android.support.v7.widget.RecyclerView>

    <com.google.android.gms.ads.doubleclick.PublisherAdView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        android:id="@+id/publisherAdView"
        ads:adUnitId="@string/banner_appotax">

    </com.google.android.gms.ads.doubleclick.PublisherAdView>

</LinearLayout>